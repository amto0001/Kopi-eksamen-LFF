---
// Henter parametrene fra Astro.props
const { htmldisplay="h2", size="medium", stylingclasses=""} = Astro.props; 
const Htmldisplay = htmldisplay;
 
//Tailwind classes - der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
"display-web": "text-8xl font-bold",
"display-mobile": "text-5xl font-bold",
};
---
<Htmldisplay class:list={[sizeClasses[size], "font-loos", stylingclasses]}><slot /></Htmldisplay>