---
// Henter parametrene fra Astro.props
const { htmlbodytext="p", size="medium", stylingclasses=""} = Astro.props; 
const Htmlbodytext = htmlbodytext;
 
//Tailwind classes - der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
"xtra-large-bold": "text-2xl font-bold",
"xtra-large-regular": "text-2xl",
"large-bold": "text-xl font-bold",
"large-regular": "text-xl",
"medium-bold": "text-lg font-bold",
"medium-regular": "text-lg",
"small-bold": "text-base font-bold",
"small-regular": "text-base",
"xtra-small-bold": "text-sm font-bold",
"xtra-small-regular": "text-sm",
};
---
<!-- // Importer komponenten, der skal bruges til at vise teksten-->
 <Htmlbodytext class:list={[sizeClasses[size], "font-lora text-primary-50 leading-relaxed", stylingclasses]}><slot /></Htmlbodytext>